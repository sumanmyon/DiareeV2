<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register.View.RegisterActivity"
    android:background="@drawable/background1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:id="@+id/register_text_input_1">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:hint="Enter Full Name"
                android:inputType="text"
                android:id="@+id/register_edit_name"
                android:drawableLeft="@drawable/ic_account_box_white_24dp"
                android:drawablePadding="6dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:id="@+id/register_text_input_2">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:hint="Enter Email"
                android:inputType="textEmailAddress"
                android:id="@+id/register_edit_email"
                android:drawableLeft="@drawable/ic_mail_outline_white_24dp"
                android:drawablePadding="6dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:id="@+id/register_text_input_3">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:hint="Enter Address"
                android:id="@+id/register_edit_address"
                android:drawableLeft="@drawable/ic_room_white_24dp"
                android:drawablePadding="6dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:id="@+id/register_text_input_4">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:hint="Enter Phone number"
                android:inputType="phone"
                android:id="@+id/register_edit_phoneno"
                android:drawableLeft="@drawable/ic_phone_white_24dp"
                android:drawablePadding="6dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:id="@+id/register_text_input_5">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:hint="Enter User Name"
                android:inputType="text"
                android:id="@+id/register_edit_user_name"
                android:drawableLeft="@drawable/ic_account_box_white_24dp"
                android:drawablePadding="6dp"/>
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_gravity="center">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:id="@+id/register_text_input_6"
                android:layout_weight="0.9"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:id="@+id/register_edit_password"
                    android:drawableLeft="@drawable/ic_lock_white_24dp"
                    android:drawablePadding="6dp" />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="center"
                android:padding="8dp"
                android:src="@drawable/ic_visibility_off_white_24dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_gravity="center">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:id="@+id/register_text_input_7"
                android:layout_weight="0.9">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:hint="Retype Password"
                    android:inputType="textPassword"
                    android:id="@+id/register_edit_repassword"
                    android:drawableLeft="@drawable/ic_lock_white_24dp"
                    android:drawablePadding="6dp" />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="center"
                android:padding="8dp"
                android:src="@drawable/ic_visibility_off_white_24dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="vertical">
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Appect terms and contitions for regristration."
                android:textColor="@color/white"
                android:textSize="12dp"
                android:id="@+id/register_check_accept"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click here to read."
                android:layout_gravity="end"
                android:textColor="@color/light_orange"/>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_margin="10dp"
            android:text="Register"
            android:textColor="@color/colorPrimary"
            android:background="@color/white"
            android:id="@+id/register_button"/>

    </LinearLayout>



</ScrollView>